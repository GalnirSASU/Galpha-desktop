{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Galpha",
  "version": "0.0.3",
  "identifier": "com.galpha.launcher",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Galpha Launcher",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 700,
        "resizable": true,
        "decorations": false,
        "transparent": false,
        "center": true,
        "fullscreen": false,
        "skipTaskbar": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Galpha",
    "copyright": "Copyright Â© 2024 Galpha",
    "category": "Game",
    "shortDescription": "League of Legends companion app",
    "longDescription": "Advanced League of Legends statistics and match tracking application"
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/galnir/Galpha/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVFMjE5NUZCMkU0MDgwNgpSV1FHQ09TeVh4bmlCV01MYU9EWnJxZ05GMEZrTThGNVUzck1aTnh2emszVEJXeDY1NXkyWkREdAo="
    }
  }
}
